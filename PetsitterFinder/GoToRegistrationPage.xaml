<Page x:Class="PetsitterFinder.GoToRegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetsitterFinder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GoToRegistrationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Как вы хотите зарегистрироваться?" 
                   FontSize="18"
                   Grid.Column="1" Grid.Row="1" 
                   Grid.ColumnSpan="2" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"/>

        <Button x:Name="btnRegistrationClient" 
                Content="Регистрация клиента" 
                FontSize="18" Grid.Column="1" 
                Grid.Row="2" Grid.ColumnSpan="2"
                HorizontalAlignment="Center" 
                Height="40" Width="180" 
                BorderBrush="#F1E4CA" 
                Margin="0 0 0 0" 
                Background="#005589" 
                Foreground="#F1E4CA"
                Click="btn_RegClient_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="18"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <Button x:Name="btnRegistrationSitter" 
                Content="Регистрация ситтера"
                FontSize="18" Grid.Column="1"
                Grid.Row="3" Grid.ColumnSpan="2"
                HorizontalAlignment="Center" 
                Height="40" Width="180" 
                BorderBrush="#F1E4CA" 
                Margin="0 0 0 0" 
                Background="#005589" 
                Foreground="#F1E4CA" 
                Click="btn_RegSitter_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="18"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
